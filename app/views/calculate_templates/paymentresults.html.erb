  <h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%=number_to_percentage(@interest_rate,precision:4)%>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%=(@n/12).to_i%>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%=@pv.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%=@payment.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>

  </body>
</html>
